@model IEnumerable<EventPlanner.CMS.ViewModels.ViewPlaceVm>

@{
    ViewBag.Title = "Places";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">

        <h2>Places</h2>

        <p>
            @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
        </p>
        <div class="table-responsive w-75">

            <table class="table table-sm table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CostPerHour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PlaceType)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-link text-info" })
                                <button class="btn btn-link text-danger delete-place" data-place-id="@item.Id">Delete</button>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CostPerHour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlaceType)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/src/site/site.js")"></script>
}
